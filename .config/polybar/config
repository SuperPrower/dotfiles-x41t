[colors]
background = ${xrdb:color0}

red 	= ${xrdb:color1}
green 	= ${xrdb:color2}
yellow 	= ${xrdb:color3}
blue 	= ${xrdb:color4}
magenta	= ${xrdb:color5}

[bar/default]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32

fixed-center = false

bottom = true

background = ${colors.background}

line-size = 2

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = xos4 Terminus:size=10;3
font-1 = FontAwesome:size=10;3

modules-left = i3
modules-center =
modules-right = xkeyboard memory swap cpu wlan eth battery temperature date

tray-position = right
tray-padding = 1
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
; cursor-scroll = ns-resize

[bar/bspwm]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
fixed-center = false

bottom = true

background = ${colors.background}

line-size = 2

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = xos4 Terminus:size=10;3
font-1 = FontAwesome:size=10;3

modules-left = bspwm
modules-center =
modules-right = xkeyboard memory swap cpu wlan eth battery temperature date

tray-position = right
tray-padding = 1
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
; cursor-scroll = ns-resize

[module/i3]
include-file = /home/superprower/.config/polybar/i3

[module/bspwm]
include-file = /home/superprower/.config/polybar/bspwm

[module/xkeyboard]
type = internal/xkeyboard

format = <label-layout>
# <label-indicator>
format-spacing = 0

; Available tokens:
;   %layout%
;   %name%
;   %number%
; Default: %layout%
label-layout = %layout%
label-layout-padding = 1
label-layout-underline = ${colors.magenta}

; Available tokens:
;   %name%
; Default: %name%
label-indicator = %name%
label-indicator-padding = 1
label-indicator-underline = ${colors.red}


[module/memory]
type = internal/memory
interval = 5
format = MEM <label>
format-underline = ${colors.yellow}
label = %percentage_used%%

[module/swap]
type = internal/memory
interval = 5
format = SWP <label>
format-underline = ${colors.yellow}
label = %mb_swap_used%

[module/cpu]
type = internal/cpu
interval = 10
label = CPU %percentage%%
format-underline = ${colors.blue}

[module/eth]
type = internal/network
interface = enp2s0
interval = 5

format-connected =  <label-connected>
format-connected-underline = ${colors.green}
label-connected = %local_ip%

format-disconnected = 

[module/wlan]
type = internal/network
interface = wlp4s2
interval = 3

format-connected =  <label-connected>
format-connected-underline = ${colors.green}
label-connected = %essid%

format-disconnected = 

[module/battery]
include-file = /home/superprower/.config/polybar/battery

[module/temperature]
include-file = /home/superprower/.config/polybar/temperature

[module/date]
type = internal/date
interval = 3

date = %b %d, %Y
time = %H:%M

format = <label>
format-underline = ${colors.magenta}

label = %date% %time%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

